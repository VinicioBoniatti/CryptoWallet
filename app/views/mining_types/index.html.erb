<p id="notice"><%= notice %></p>

<h1><%= MiningType.model_name.human(count: @mining_types.count) %></h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= @mining_types.human_attribute_name(:description)%></th>
      <th><%= @mining_types.human_attribute_name(:acronym)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('config.show'), mining_type %></td>
        <td><%= link_to t('config.edit'), edit_mining_type_path(mining_type) %></td>
        <td><%= link_to t('config.destroy'), mining_type, method: :delete, data: { confirm: t('mensagens.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to  t('title.new_miningtype'), new_mining_type_path,class:"btn btn-secondary btn-lg" %>
<%= link_to  t('config.back'), welcome_index_path,class:"btn btn-secondary btn-lg" %>